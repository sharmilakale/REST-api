<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.egen.rest.domain.ProfileAndSettings" table="db_restaurant.restaurant_profile_settings">

		<id name="restId" type="integer">
			<column name="restId"/>
			<generator class="native"></generator>
		</id>
		<property name="restName" type="string">
			<column name="restName" length="45"/>
		</property>
		
		<property name="tagLine" type="string">
			<column name="tagLine" length="45"/>
		</property>
		<property name="addrLine1" type="string">
			<column name="addrLine1" length="45"/>
		</property>
		
		<property name="addrLine2" type="string">
			<column name="addrLine2" length="45"/>
		</property>
		<property name="city" type="string">
			<column name="city" length="20"/>
		</property>
		
		<property name="state" type="string">
			<column name="state" length="20"/>
		</property>
		<property name="zipCode" type="string">
			<column name="zipCode" length="20"/>
		</property>
		
		<property name="phone" type="string">
			<column name="phone" length="20"/>
		</property>
		
		<property name="email" type="string">
			<column name="email" length="20"/>
		</property>
		<property name="autoAssign" type="boolean">
			<column name="autoAssign" length="1"/>
		</property>
		<property name="openCloseDetails" type="string">
			<column name="openCloseDetails" length="200"/>
		</property>
	</class>
</hibernate-mapping>